<div class="min-h-screen py-8">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">My Orders</h1>
      <%= link_to "Start New Order", new_order_path, 
          class: "bg-mexican text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition-colors" %>
    </div>

    <% if @orders.any? %>
      <div class="space-y-6">
        <% @orders.each do |order| %>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-xl font-semibold text-gray-800">Order #<%= order.id %></h2>
                <p class="text-gray-600">
                  <i class="fas fa-calendar mr-2"></i>
                  <%= order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              
              <div class="text-right">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                  <%= case order.status
                      when 'cart' then 'bg-yellow-100 text-yellow-800'
                      when 'placed' then 'bg-blue-100 text-blue-800'
                      when 'preparing' then 'bg-orange-100 text-orange-800'
                      when 'ready' then 'bg-green-100 text-green-800'
                      when 'completed' then 'bg-gray-100 text-gray-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= order.status.titleize %>
                </span>
                <div class="mt-2 text-lg font-bold text-mexican">
                  $<%= sprintf("%.2f", order.total_amount || 0) %>
                </div>
              </div>
            </div>

            <div class="flex justify-between items-center">
              <div>
                <p class="text-gray-600">
                  <%= pluralize(order.order_items.count, 'item') %>
                  <% if order.order_items.any? %>
                    - <%= order.order_items.first.item_name %>
                    <% if order.order_items.count > 1 %>
                      + <%= pluralize(order.order_items.count - 1, 'more') %>
                    <% end %>
                  <% end %>
                </p>
              </div>
              
              <%= link_to "View Details", order_path(order), 
                  class: "bg-mexican text-white px-4 py-2 rounded hover:bg-orange-600 transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i class="fas fa-receipt text-4xl text-gray-400 mb-4"></i>
        <h2 class="text-xl text-gray-600 mb-4">No orders yet</h2>
        <p class="text-gray-500 mb-6">Start your first order to see it here</p>
        <%= link_to "Browse Menu", categories_path, 
            class: "bg-mexican text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>