<div class="min-h-screen py-8 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800">Welcome back, <%= @user.first_name %>!</h1>
      <p class="text-gray-600 mt-2">Manage your profile and track your loyalty rewards</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Current Loyalty Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-gradient-to-r from-mexican to-orange-600 p-6 text-white">
            <h2 class="text-2xl font-bold mb-2">Current Loyalty Card</h2>
            <p class="text-orange-100">Collect 10 punches to earn $<%= sprintf("%.2f", @current_loyalty_card.discount_amount) %> off!</p>
          </div>
          
          <div class="p-6">
            <!-- Punch Progress -->
            <div class="mb-6">
              <div class="flex justify-between items-center mb-2">
                <span class="text-gray-700 font-medium">Progress</span>
                <span class="text-gray-700 font-bold"><%= @current_loyalty_card.punches_count %> / 10 punches</span>
              </div>
              
              <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
                <div class="bg-mexican h-3 rounded-full transition-all duration-300" 
                     style="width: <%= (@current_loyalty_card.punches_count / 10.0 * 100).round(1) %>%"></div>
              </div>
              
              <!-- Punch Circles -->
              <div class="grid grid-cols-5 gap-2">
                <% 10.times do |i| %>
                  <div class="aspect-square rounded-full border-2 flex items-center justify-center text-sm font-bold
                              <%= i < @current_loyalty_card.punches_count ? 'bg-mexican border-mexican text-white' : 'border-gray-300 text-gray-400' %>">
                    <%= i + 1 %>
                  </div>
                <% end %>
              </div>
            </div>

            <% if @current_loyalty_card.is_completed && !@current_loyalty_card.is_redeemed %>
              <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
                <div class="flex items-center">
                  <i class="fas fa-gift text-green-600 text-xl mr-3"></i>
                  <div>
                    <h3 class="text-green-800 font-bold">Congratulations!</h3>
                    <p class="text-green-700">Your loyalty card is complete! Redeem for $<%= sprintf("%.2f", @current_loyalty_card.discount_amount) %> off your next order.</p>
                  </div>
                </div>
                <%= link_to "Redeem Now", redeem_loyalty_card_path(@current_loyalty_card), method: :patch,
                    class: "mt-3 inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" %>
              </div>
            <% end %>

            <!-- Upload Receipt -->
            <div class="border-t pt-4">
              <h3 class="font-bold text-gray-800 mb-2">Add a Punch</h3>
              <p class="text-gray-600 text-sm mb-4">Upload your receipt to earn a loyalty punch</p>
              <%= link_to "Upload Receipt", new_receipt_upload_path, 
                  class: "inline-flex items-center bg-mexican text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition-colors" %>
            </div>
          </div>
        </div>

        <!-- Recent Orders -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Recent Orders</h2>
            
            <% if @recent_orders.any? %>
              <div class="space-y-4">
                <% @recent_orders.each do |order| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                      <div>
                        <h3 class="font-semibold text-gray-800">Order #<%= order.id %></h3>
                        <p class="text-gray-600 text-sm"><%= order.order_date.strftime("%B %d, %Y at %I:%M %p") %></p>
                      </div>
                      <div class="text-right">
                        <span class="text-lg font-bold text-mexican">$<%= sprintf("%.2f", order.total_amount) %></span>
                        <br>
                        <span class="text-sm px-2 py-1 rounded-full
                                     <%= order.status == 'completed' ? 'bg-green-100 text-green-800' : 
                                         order.status == 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                         'bg-gray-100 text-gray-800' %>">
                          <%= order.status.capitalize %>
                        </span>
                      </div>
                    </div>
                    
                    <div class="text-gray-600 text-sm">
                      <% order.order_items.limit(3).each do |item| %>
                        <span><%= item.quantity %>x <%= item.item_name %></span>
                        <%= ", " unless item == order.order_items.limit(3).last %>
                      <% end %>
                      <% if order.order_items.count > 3 %>
                        <span class="text-gray-500">... and <%= order.order_items.count - 3 %> more item(s)</span>
                      <% end %>
                    </div>
                    
                    <div class="mt-3">
                      <%= link_to "View Details", order_path(order), 
                          class: "text-mexican hover:text-orange-600 text-sm font-medium" %>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <div class="mt-6">
                <%= link_to "View All Orders", orders_path, 
                    class: "text-mexican hover:text-orange-600 font-medium" %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <i class="fas fa-shopping-bag text-4xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 mb-4">You haven't placed any orders yet</p>
                <%= link_to "Browse Menu", categories_path, 
                    class: "bg-mexican text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition-colors" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Profile Summary -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Profile</h2>
          
          <div class="space-y-3">
            <div>
              <span class="text-gray-600 text-sm">Name</span>
              <p class="font-medium"><%= @user.full_name %></p>
            </div>
            
            <div>
              <span class="text-gray-600 text-sm">Username</span>
              <p class="font-medium">@<%= @user.username %></p>
            </div>
            
            <div>
              <span class="text-gray-600 text-sm">Email</span>
              <p class="font-medium"><%= @user.email %></p>
            </div>
            
            <% if @user.phone.present? %>
              <div>
                <span class="text-gray-600 text-sm">Phone</span>
                <p class="font-medium"><%= @user.phone %></p>
              </div>
            <% end %>
          </div>
          
          <div class="mt-6">
            <%= link_to "Edit Profile", edit_profile_path, 
                class: "w-full bg-mexican text-white py-2 px-4 rounded-lg hover:bg-orange-600 transition-colors text-center block" %>
          </div>
        </div>

        <!-- Loyalty Stats -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Loyalty Stats</h2>
          
          <div class="space-y-4">
            <div class="text-center p-4 bg-green-50 rounded-lg">
              <div class="text-2xl font-bold text-green-600">$<%= sprintf("%.2f", @total_savings) %></div>
              <div class="text-green-700 text-sm">Total Saved</div>
            </div>
            
            <div class="text-center p-4 bg-blue-50 rounded-lg">
              <div class="text-2xl font-bold text-blue-600"><%= @user.completed_cards_count %></div>
              <div class="text-blue-700 text-sm">Cards Completed</div>
            </div>
            
            <div class="text-center p-4 bg-purple-50 rounded-lg">
              <div class="text-2xl font-bold text-purple-600"><%= @user.total_punches %></div>
              <div class="text-purple-700 text-sm">Total Punches</div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Quick Actions</h2>
          
          <div class="space-y-3">
            <%= link_to orders_path, class: "flex items-center text-gray-700 hover:text-mexican transition-colors" do %>
              <i class="fas fa-receipt mr-3 w-4"></i>
              <span>View All Orders</span>
            <% end %>
            
            <%= link_to loyalty_cards_path, class: "flex items-center text-gray-700 hover:text-mexican transition-colors" do %>
              <i class="fas fa-credit-card mr-3 w-4"></i>
              <span>Loyalty Cards</span>
            <% end %>
            
            <%= link_to receipt_uploads_path, class: "flex items-center text-gray-700 hover:text-mexican transition-colors" do %>
              <i class="fas fa-upload mr-3 w-4"></i>
              <span>Upload Receipt</span>
            <% end %>
            
            <%= link_to categories_path, class: "flex items-center text-gray-700 hover:text-mexican transition-colors" do %>
              <i class="fas fa-utensils mr-3 w-4"></i>
              <span>Browse Menu</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>