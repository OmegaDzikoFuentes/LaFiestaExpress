# app/views/menu_items/index.html.erb
<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">All Menu Items</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @menu_items.each do |item| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <% if item.image_url.present? %>
          <%= image_tag item.image_url, alt: item.name, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-48 flex items-center justify-center">
            <span class="text-gray-500">No image</span>
          </div>
        <% end %>
        
        <div class="p-4">
          <h2 class="text-xl font-semibold"><%= item.name %></h2>
          <p class="text-gray-600 mt-2"><%= item.description %></p>
          <div class="mt-4 flex justify-between items-center">
            <span class="text-lg font-bold">$<%= sprintf("%.2f", item.price) %></span>
            <%= link_to "View Details", menu_item_path(item), 
                class: "text-mexican hover:text-orange-600 font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>