<div class="min-h-screen py-8">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-8">Add New Menu Item</h1>

      <%= form_with model: @menu_item, local: true, class: "space-y-6" do |f| %>
        <% if @menu_item.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <h4 class="font-medium">Please fix the following errors:</h4>
            <ul class="list-disc list-inside mt-2">
              <% @menu_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Item Name", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.text_field :name, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
        </div>

        <div>
          <%= f.label :description, "Description", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.text_area :description, rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :price, "Price ($)", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.number_field :price, step: 0.01, min: 0, required: true, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
          </div>

          <div>
            <%= f.label :category_id, "Category", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, @menu_item.category_id), 
                { prompt: "Select a category" }, 
                { required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" } %>
          </div>
        </div>

        <div>
          <%= f.label :image_url, "Image URL", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.url_field :image_url, 
              placeholder: "https://example.com/image.jpg",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
        </div>

        <div class="flex space-x-4">
          <%= link_to "Cancel", @menu_item.category_id ? category_path(@menu_item.category_id) : menu_items_path, 
              class: "flex-1 bg-gray-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-gray-600 transition-colors text-center" %>
          <%= f.submit "Create Menu Item", 
              class: "flex-1 bg-mexican text-white py-3 px-6 rounded-lg font-semibold hover:bg-orange-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>