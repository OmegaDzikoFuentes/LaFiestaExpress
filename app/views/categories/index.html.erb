<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="bg-mexican text-white py-20">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-6">Â¡La Fiesta Express!</h1>
      <p class="text-xl mb-8">Authentic flavors of Mexico at home in Troy</p>
      <%= link_to "Start Ordering", new_order_path, class: "bg-white text-mexican px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block" if user_signed_in? %>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">Our Menu Categories</h2>
        <p class="text-gray-600 text-lg">Choose from our delicious selection</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @categories.each do |category| %>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <% if category.image_url.present? %>
              <div class="h-48 bg-cover bg-center" style="background-image: url('<%= category.image_url %>')"></div>
            <% else %>
              <div class="h-48 bg-gradient-to-r from-orange-400 to-red-500 flex items-center justify-center">
                <i class="fas fa-utensils text-4xl text-white"></i>
              </div>
            <% end %>
            
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-gray-800"><%= category.name %></h3>
              <% if category.description.present? %>
                <p class="text-gray-600 mb-4"><%= category.description %></p>
              <% end %>
              
              <%= link_to category_path(category), class: "inline-flex items-center text-mexican hover:text-orange-600 font-medium" do %>
                View Items <i class="fas fa-arrow-right ml-2"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <% if current_user&.admin? %>
        <div class="text-center mt-12">
          <%= link_to "Add New Category", new_category_path, class: "bg-mexican text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </section>
</div>