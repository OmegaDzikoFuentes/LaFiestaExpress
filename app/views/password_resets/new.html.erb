# app/views/password_resets/new.html.erb
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <i class="fas fa-key text-4xl text-mexican mb-4"></i>
      <h2 class="text-3xl font-bold text-gray-900">Reset Your Password</h2>
      <p class="mt-2 text-gray-600">Enter your email to receive reset instructions</p>
    </div>
    
    <div class="bg-white shadow-lg rounded-lg p-8">
      <%= form_with url: password_resets_path, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Email Address", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.email_field :email, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
        </div>

        <%= f.submit "Send Reset Instructions", 
            class: "w-full bg-mexican text-white py-3 px-4 rounded-md font-semibold hover:bg-orange-600 transition-colors" %>
      <% end %>
      
      <div class="text-center mt-6">
        <%= link_to "Back to Login", login_path, class: "text-mexican hover:underline" %>
      </div>
    </div>
  </div>
</div>