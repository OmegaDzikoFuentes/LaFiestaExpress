<%= form_with model: [@menu_item, @customization], local: true, class: "space-y-6" do |f| %>
    <% if @customization.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h4 class="font-medium">Please fix the following errors:</h4>
        <ul class="list-disc list-inside mt-2">
          <% @customization.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= f.label :name, "Customization Name", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_field :name, required: true, 
          placeholder: "e.g., Extra Cheese, No Onions, Spice Level",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
      <p class="text-sm text-gray-600 mt-1">This will appear as an option for customers</p>
    </div>
  
    <div>
      <%= f.label :description, "Description", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_area :description, rows: 3,
          placeholder: "Optional description of this customization...",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
      <p class="text-sm text-gray-600 mt-1">Additional details about this customization (optional)</p>
    </div>
  
    <div>
      <%= f.label :price_adjustment, "Price Adjustment ($)", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.number_field :price_adjustment, step: 0.01, 
          placeholder: "0.00",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican" %>
      <p class="text-sm text-gray-600 mt-1">
        Enter positive value for additional cost, negative for discount, or 0 for no change
      </p>
    </div>
  
    <div>
      <div class="flex items-center">
        <%= f.check_box :is_default, 
            class: "h-4 w-4 text-mexican focus:ring-mexican border-gray-300 rounded" %>
        <%= f.label :is_default, "Selected by default", class: "ml-2 text-gray-700 font-medium" %>
      </div>
      <p class="text-sm text-gray-600 mt-1">
        If checked, this customization will be pre-selected when customers add this item to their cart
      </p>
    </div>
  
    <div class="flex space-x-4">
      <%= link_to "Cancel", menu_item_customizations_path(@menu_item), 
          class: "flex-1 bg-gray-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-gray-600 transition-colors text-center" %>
      <%= f.submit @customization.persisted? ? "Update Customization" : "Create Customization", 
          class: "flex-1 bg-mexican text-white py-3 px-6 rounded-lg font-semibold hover:bg-orange-600 transition-colors" %>
    </div>
  <% end %>