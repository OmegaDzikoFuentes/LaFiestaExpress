<div class="min-h-screen py-8 bg-gray-50">
  <div class="max-w-md mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-mexican to-orange-600 p-6 text-white text-center">
        <i class="fas fa-user-plus text-4xl mb-4"></i>
        <h1 class="text-2xl font-bold">Create Account</h1>
        <p class="text-orange-400 mt-1">Join La Fiesta and start earning loyalty rewards!</p>
      </div>

      <div class="p-8">
        <%= form_with model: @user, url: signup_path, local: true, class: "space-y-4" do |f| %>
          
          <!-- Error Messages -->
          <% if @user.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex items-center mb-2">
                <i class="fas fa-exclamation-circle text-red-500 mr-2"></i>
                <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
              </div>
              <ul class="text-red-700 text-sm space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li>â€¢ <%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Personal Information -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= f.label :first_name, class: "block text-gray-700 font-medium mb-2" %>
              <%= f.text_field :first_name, 
                  placeholder: "John",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:first_name].any?}" %>
            </div>
            
            <div>
              <%= f.label :last_name, class: "block text-gray-700 font-medium mb-2" %>
              <%= f.text_field :last_name, 
                  placeholder: "Doe",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:last_name].any?}" %>
            </div>
          </div>

          <!-- Account Information -->
          <div>
            <%= f.label :username, class: "block text-gray-700 font-medium mb-2" %>
            <%= f.text_field :username, 
                placeholder: "johndoe",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:username].any?}" %>
            <p class="text-gray-500 text-xs mt-1">This will be used to log in</p>
          </div>
          
          <div>
            <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
            <%= f.email_field :email, 
                placeholder: "john@example.com",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:email].any?}" %>
          </div>
          
          <div>
            <%= f.label :phone, "Phone Number (Optional)", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.telephone_field :phone, 
                placeholder: "1234567890",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:phone].any?}" %>
            <p class="text-gray-500 text-xs mt-1">10 digits only, no dashes or spaces</p>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
            <%= f.password_field :password, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:password].any?}" %>
            <p class="text-gray-500 text-xs mt-1">Must be at least 6 characters</p>
          </div>
          
          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.password_field :password_confirmation, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-mexican #{'border-red-300' if @user.errors[:password_confirmation].any?}" %>
          </div>

          <!-- Loyalty Card Benefit -->
          <div class="bg-green-50 border border-green-200 rounded-lg p-4 my-6">
            <div class="flex items-center">
              <i class="fas fa-gift text-green-600 text-xl mr-3"></i>
              <div>
                <h3 class="text-green-800 font-bold">Welcome Bonus!</h3>
                <p class="text-green-700 text-sm">Get your first loyalty card automatically when you sign up</p>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <%= f.submit "Create Account", 
              class: "w-full bg-mexican text-white py-3 px-6 rounded-lg font-semibold hover:bg-orange-600 transition-colors" %>
        <% end %>

        <!-- Login Link -->
        <div class="text-center mt-6 pt-6 border-t border-gray-200">
          <p class="text-gray-600">Already have an account?</p>
          <%= link_to "Sign In", login_path, 
              class: "text-mexican hover:text-orange-600 font-medium" %>
        </div>
      </div>
    </div>

    <!-- Features -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
      <div class="bg-white rounded-lg p-4 shadow">
        <i class="fas fa-credit-card text-mexican text-2xl mb-2"></i>
        <h3 class="font-semibold text-gray-800">Loyalty Rewards</h3>
        <p class="text-gray-600 text-sm">Earn punches with every purchase</p>
      </div>
      
      <div class="bg-white rounded-lg p-4 shadow">
        <i class="fas fa-mobile-alt text-mexican text-2xl mb-2"></i>
        <h3 class="font-semibold text-gray-800">Easy Ordering</h3>
        <p class="text-gray-600 text-sm">Quick and convenient online ordering</p>
      </div>
      
      <div class="bg-white rounded-lg p-4 shadow">
        <i class="fas fa-star text-mexican text-2xl mb-2"></i>
        <h3 class="font-semibold text-gray-800">Special Offers</h3>
        <p class="text-gray-600 text-sm">Exclusive deals for members</p>
      </div>
    </div>
  </div>
</div>