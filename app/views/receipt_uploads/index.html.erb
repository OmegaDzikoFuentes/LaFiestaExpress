<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg mb-8 p-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">My Receipt Uploads</h1>
          <p class="text-gray-600">Track your loyalty punch requests</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to new_receipt_upload_path, 
              class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors inline-flex items-center" do %>
            <i class="fas fa-camera mr-2"></i>Upload Receipt
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Current Loyalty Card Status -->
    <% if current_user.loyalty_cards.active.any? %>
      <% card = current_user.loyalty_cards.active.first %>
      <div class="bg-gradient-to-r from-red-600 to-orange-500 text-white rounded-xl p-6 mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-bold mb-1">Current Loyalty Card</h2>
            <p class="opacity-90"><%= card.punches_count %> out of 10 punches</p>
          </div>
          <div class="text-right">
            <div class="text-3xl font-bold"><%= card.punches_count %>/10</div>
            <div class="text-sm opacity-80">
              <%= pluralize(10 - card.punches_count, 'punch') %> to reward
            </div>
          </div>
        </div>
        
        <!-- Progress Bar -->
        <div class="mt-4 bg-white bg-opacity-20 rounded-full h-3">
          <div class="bg-white rounded-full h-3 transition-all duration-500" 
               style="width: <%= (card.punches_count.to_f / 10 * 100).round(1) %>%"></div>
        </div>
      </div>
    <% end %>
    
    <!-- Receipt Uploads List -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recent Uploads</h2>
      </div>
      
      <% if @receipt_uploads.any? %>
        <div class="divide-y divide-gray-200">
          <% @receipt_uploads.each do |upload| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start space-x-4">
                <!-- Receipt Image Thumbnail -->
                <div class="flex-shrink-0">
                  <% if upload.receipt_image.attached? %>
                    <%= image_tag upload.receipt_image, 
                        class: "w-16 h-16 object-cover rounded-lg border-2 border-gray-200" %>
                  <% else %>
                    <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-receipt text-gray-400"></i>
                    </div>
                  <% end %>
                </div>
                
                <!-- Upload Details -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm text-gray-500">
                        Uploaded <%= time_ago_in_words(upload.created_at) %> ago
                      </p>
                      <% if upload.receipt_date %>
                        <p class="text-sm text-gray-500">
                          Receipt from <%= upload.receipt_date.strftime("%B %d, %Y") %>
                        </p>
                      <% end %>
                      <% if upload.receipt_total %>
                        <p class="text-sm text-gray-500">
                          Total: $<%= sprintf("%.2f", upload.receipt_total) %>
                        </p>
                      <% end %>
                    </div>
                    
                    <!-- Status Badge -->
                    <div>
                      <% case upload.status %>
                      <% when 'pending' %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                          <i class="fas fa-clock mr-1"></i>Pending Review
                        </span>
                      <% when 'approved' %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                          <i class="fas fa-check mr-1"></i>Approved
                        </span>
                      <% when 'rejected' %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                          <i class="fas fa-times mr-1"></i>Rejected
                        </span>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Admin Notes (if any) -->
                  <% if upload.admin_notes.present? %>
                    <div class="mt-2 p-3 bg-gray-50 rounded-lg">
                      <p class="text-sm text-gray-700">
                        <i class="fas fa-comment mr-1"></i>
                        <strong>Note:</strong> <%= upload.admin_notes %>
                      </p>
                    </div>
                  <% end %>
                  
                  <!-- Actions -->
                  <div class="mt-3 flex space-x-3">
                    <%= link_to receipt_upload_path(upload), 
                        class: "text-red-600 hover:text-red-700 text-sm font-medium" do %>
                      <i class="fas fa-eye mr-1"></i>View Details
                    <% end %>
                    
                    <% if upload.pending? %>
                      <%= link_to receipt_upload_path(upload), 
                          method: :delete,
                          data: { 
                            confirm: "Are you sure you want to cancel this upload?",
                            turbo_method: :delete
                          },
                          class: "text-gray-600 hover:text-gray-700 text-sm font-medium" do %>
                        <i class="fas fa-trash mr-1"></i>Cancel
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <i class="fas fa-receipt text-6xl text-gray-300 mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No Receipts Uploaded</h3>
          <p class="text-gray-500 mb-6">Upload your first receipt to start earning loyalty punches!</p>
          <%= link_to new_receipt_upload_path, 
              class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors inline-flex items-center" do %>
            <i class="fas fa-camera mr-2"></i>Upload Receipt
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>