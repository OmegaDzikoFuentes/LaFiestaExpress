<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-md mx-auto px-4">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-red-600 to-orange-500 text-white p-6 text-center">
        <i class="fas fa-camera text-4xl mb-3"></i>
        <h1 class="text-2xl font-bold mb-2">Upload Receipt</h1>
        <p class="opacity-90">Get your loyalty punch!</p>
      </div>
      
      <!-- Current Card Status -->
      <% if @loyalty_card %>
        <div class="p-4 bg-yellow-50 border-l-4 border-yellow-400">
          <div class="flex">
            <i class="fas fa-star text-yellow-500 mt-1 mr-3"></i>
            <div>
              <p class="font-semibold text-yellow-800">Current Progress</p>
              <p class="text-yellow-700"><%= @loyalty_card.punches_count %> out of 10 punches</p>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Form -->
      <div class="p-6">
        <%= form_with model: @receipt_upload, local: true, html: { multipart: true, class: "space-y-6" } do |form| %>
          <% if @receipt_upload.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <i class="fas fa-exclamation-circle text-red-500 mt-1 mr-3"></i>
                <div>
                  <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @receipt_upload.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
          
          <!-- Receipt Image Upload -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-receipt mr-2 text-red-600"></i>Receipt Photo
            </label>
            <div class="upload-area border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-red-500 transition-colors">
              <%= form.file_field :receipt_image, 
                  accept: "image/*", 
                  capture: "environment",
                  class: "hidden",
                  id: "receipt-input",
                  onchange: "previewImage(this)" %>
              
              <div id="upload-placeholder">
                <i class="fas fa-camera text-4xl text-gray-400 mb-3"></i>
                <p class="text-gray-600 mb-2">Tap to take photo or upload image</p>
                <p class="text-sm text-gray-500">Make sure your receipt is clear and readable</p>
                <button type="button" onclick="document.getElementById('receipt-input').click()" 
                        class="mt-3 bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                  <i class="fas fa-camera mr-2"></i>Take Photo
                </button>
              </div>
              
              <div id="preview-container" class="hidden">
                <img id="preview-image" class="max-w-full h-auto rounded-lg mb-3" />
                <button type="button" onclick="removeImage()" 
                        class="text-red-600 hover:text-red-700 text-sm">
                  <i class="fas fa-trash mr-1"></i>Remove Image
                </button>
              </div>
            </div>
          </div>
          
          <!-- Optional Receipt Details -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Receipt Date (Optional)
              </label>
              <%= form.date_field :receipt_date, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500",
                  max: Date.current %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Total Amount (Optional)
              </label>
              <%= form.number_field :receipt_total, 
                  step: 0.01, 
                  min: 0,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500",
                  placeholder: "0.00" %>
            </div>
          </div>
          
          <!-- Instructions -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h3 class="font-semibold text-blue-800 mb-2">
              <i class="fas fa-info-circle mr-2"></i>Instructions
            </h3>
            <ul class="text-sm text-blue-700 space-y-1">
              <li>• Make sure the receipt shows "La Fiesta Express"</li>
              <li>• Receipt must be from a recent visit (within 7 days)</li>
              <li>• One punch per receipt</li>
              <li>• We'll review and add your punch within 24 hours</li>
            </ul>
          </div>
          
          <!-- Submit Button -->
          <div class="space-y-3">
            <%= form.submit "Submit Receipt", 
                class: "w-full bg-red-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-red-700 transition-colors disabled:opacity-50",
                id: "submit-btn",
                disabled: true %>
            
            <%= link_to "Cancel", loyalty_cards_path, 
                class: "block w-full text-center py-3 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
function previewImage(input) {
  const file = input.files[0];
  const placeholder = document.getElementById('upload-placeholder');
  const container = document.getElementById('preview-container');
  const preview = document.getElementById('preview-image');
  const submitBtn = document.getElementById('submit-btn');
  
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      preview.src = e.target.result;
      placeholder.classList.add('hidden');
      container.classList.remove('hidden');
      submitBtn.disabled = false;
    };
    reader.readAsDataURL(file);
  }
}

function removeImage() {
  const input = document.getElementById('receipt-input');
  const placeholder = document.getElementById('upload-placeholder');
  const container = document.getElementById('preview-container');
  const submitBtn = document.getElementById('submit-btn');
  
  input.value = '';
  placeholder.classList.remove('hidden');
  container.classList.add('hidden');
  submitBtn.disabled = true;
}
</script>