<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg mb-8 p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Receipt Upload Management</h1>
      <p class="text-gray-600">Review and approve customer receipt uploads for loyalty punches</p>
    </div>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-full">
            <i class="fas fa-clock text-yellow-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Pending Review</p>
            <p class="text-2xl font-bold text-gray-900"><%= @pending_uploads.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="fas fa-check text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Approved Today</p>
            <p class="text-2xl font-bold text-gray-900">
              <%= ReceiptUpload.approved.where(approved_at: Date.current.all_day).count %>
            </p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="fas fa-receipt text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Total This Week</p>
            <p class="text-2xl font-bold text-gray-900">
              <%= ReceiptUpload.where(created_at: 1.week.ago..Time.current).count %>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Pending Uploads -->
    <% if @pending_uploads.any? %>
      <div class="bg-white rounded-xl shadow-lg mb-8 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-yellow-50">
          <h2 class="text-xl font-semibold text-yellow-800">
            <i class="fas fa-clock mr-2"></i>Pending Review (<%= @pending_uploads.count %>)
          </h2>
        </div>
        
        <div class="divide-y divide-gray-200">
          <% @pending_uploads.each do |upload| %>
            <div class="p-6">
              <div class="flex items-start space-x-6">
                <!-- Receipt Image -->
                <div class="flex-shrink-0">
                  <% if upload.receipt_image.attached? %>
                    <%= image_tag upload.receipt_image, 
                        class: "w-24 h-24 object-cover rounded-lg border-2 border-gray-200 cursor-pointer",
                        onclick: "openImageModal('#{url_for(upload.receipt_image)}')" %>
                  <% else %>
                    <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-receipt text-gray-400 text-3xl"></i>
                    </div>
                  <% end %>
                </div>
                
                <!-- Upload Info -->
                <div class="flex-1">
                  <div class="flex items-start justify-between">
                    <div>
                      <h3 class="font-semibold text-gray-900">
                        <%= upload.user.first_name %> <%= upload.user.last_name %>
                      </h3>
                      <p class="text-sm text-gray-500"><%= upload.user.email %></p>
                      <p class="text-sm text-gray-500">
                        Uploaded <%= time_ago_in_words(upload.created_at) %> ago
                      </p>
                      <% if upload.receipt_date %>
                        <p class="text-sm text-gray-500">
                          Receipt date: <%= upload.receipt_date.strftime("%B %d, %Y") %>
                        </p>
                      <% end %>
                      <% if upload.receipt_total %>
                        <p class="text-sm text-gray-500">
                          Total: $<%= sprintf("%.2f", upload.receipt_total) %>
                        </p>
                      <% end %>
                      <p class="text-sm text-gray-500">
                        Card: #<%= upload.loyalty_card.id %>
                        (<%= upload.loyalty_card.punches_count %> punches)
                      </p>
                    </div>
                    
                    <!-- Actions -->
                    <div class="flex space-x-2">
                      <%= button_to approve_admin_receipt_upload_path(upload), 
                          method: :patch,
                          class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" do %>
                        <i class="fas fa-check mr-1"></i>Approve
                      <% end %>
                      
                      <%= button_to reject_admin_receipt_upload_path(upload), 
                          method: :patch,
                          class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors" do %>
                        <i class="fas fa-times mr-1"></i>Reject
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Notes Field -->
                  <%= form_with url: admin_receipt_upload_path(upload), method: :patch, local: true do |f| %>
                    <div class="mt-4">
                      <%= f.label :admin_notes, "Admin Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= f.text_area :admin_notes, 
                          rows: 2,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500",
                          placeholder: "Add notes for approval/rejection" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-lg p-8 text-center mb-8">
        <i class="fas fa-check-circle text-green-500 text-5xl mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Pending Uploads</h3>
        <p class="text-gray-500">All receipt uploads have been processed!</p>
      </div>
    <% end %>
    
    <!-- Recently Processed -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-xl font-semibold text-gray-900">
          <i class="fas fa-history mr-2"></i>Recently Processed
        </h2>
      </div>
      
      <% if @recent_processed.any? %>
        <div class="divide-y divide-gray-200">
          <% @recent_processed.each do |upload| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start space-x-4">
                <!-- Receipt Image -->
                <div class="flex-shrink-0">
                  <% if upload.receipt_image.attached? %>
                    <%= image_tag upload.receipt_image, 
                        class: "w-16 h-16 object-cover rounded-lg border-2 border-gray-200" %>
                  <% else %>
                    <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-receipt text-gray-400"></i>
                    </div>
                  <% end %>
                </div>
                
                <!-- Upload Info -->
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-semibold text-gray-900">
                        <%= upload.user.first_name %> <%= upload.user.last_name %>
                      </h3>
                      <p class="text-sm text-gray-500">
                        <%= upload.status.capitalize %> â€¢ 
                        <%= time_ago_in_words(upload.updated_at) %> ago
                      </p>
                      <% if upload.approved_by %>
                        <p class="text-sm text-gray-500">
                          Processed by: <%= upload.approved_by.full_name %>
                        </p>
                      <% end %>
                    </div>
                    
                    <!-- Status Badge -->
                    <div>
                      <% case upload.status %>
                      <% when 'approved' %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                          <i class="fas fa-check mr-1"></i>Approved
                        </span>
                      <% when 'rejected' %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                          <i class="fas fa-times mr-1"></i>Rejected
                        </span>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Admin Notes -->
                  <% if upload.admin_notes.present? %>
                    <div class="mt-3 bg-gray-50 border-l-4 border-gray-400 p-3 rounded-r">
                      <p class="text-sm text-gray-700">
                        <i class="fas fa-comment mr-1"></i>
                        <strong>Notes:</strong> <%= upload.admin_notes %>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <i class="fas fa-inbox text-5xl text-gray-300 mb-4"></i>
          <p class="text-gray-500">No processed receipts yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Image Preview Modal -->
<div id="imageModal" class="hidden fixed inset-0 z-50 overflow-auto bg-black bg-opacity-75">
  <div class="relative w-full h-full flex items-center justify-center p-4">
    <button onclick="closeImageModal()" 
            class="absolute top-4 right-4 text-white text-3xl hover:text-gray-300">
      <i class="fas fa-times"></i>
    </button>
    <img id="modalImage" class="max-h-[90vh] max-w-[90vw] object-contain">
  </div>
</div>

<script>
function openImageModal(imageUrl) {
  document.getElementById('modalImage').src = imageUrl;
  document.getElementById('imageModal').classList.remove('hidden');
  document.body.classList.add('overflow-hidden');
}

function closeImageModal() {
  document.getElementById('imageModal').classList.add('hidden');
  document.body.classList.remove('overflow-hidden');
}
</script>